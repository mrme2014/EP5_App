<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_remotefile_tv_video"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:drawableBottom="@drawable/bottom_blue"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="视频" />

            <TextView
                android:id="@+id/fragment_remotefile_tv_photo"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="照片" />
        </LinearLayout>

        <ImageView
            android:id="@+id/fragment_remotefile_ib_back"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:padding="15dp"
            android:src="@drawable/all_back" />
    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_remotefile_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_download_btn_disable" />

</LinearLayout>